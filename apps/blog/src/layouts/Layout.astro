---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Agent Framework Blog - Latest features and updates" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <nav>
        <a href="/" class="logo">Agent Framework</a>
        <div class="nav-links">
          <a href="/">Blog</a>
          <a href="/about">About</a>
        </div>
      </nav>
    </header>
    <slot />
    <footer class="site-footer">
      <p>&copy; 2025 Agent Framework. Built with agent-driven development.</p>
    </footer>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  body {
    font-family: system-ui, sans-serif;
    line-height: 1.6;
    color: #1f2937;
    background: #ffffff;
  }
  
  .site-header {
    background: #f9fafb;
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .site-header nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo {
    font-weight: bold;
    font-size: 1.25rem;
    text-decoration: none;
    color: #1f2937;
  }
  
  .nav-links {
    display: flex;
    gap: 1.5rem;
  }
  
  .nav-links a {
    text-decoration: none;
    color: #4b5563;
    font-weight: 500;
  }
  
  .nav-links a:hover {
    color: #1f2937;
  }
  
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
    min-height: calc(100vh - 200px);
  }
  
  h1 {
    font-size: 2.25rem;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }
  
  .site-footer {
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
    padding: 2rem 0;
    text-align: center;
    color: #6b7280;
  }
</style>